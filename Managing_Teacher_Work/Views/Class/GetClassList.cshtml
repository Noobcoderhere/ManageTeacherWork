
@{
    ViewBag.Title = "ManageStudent";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listClass = ViewBag.Classes;
    var session = (Managing_Teacher_Web.Common.UserLogin)Session[Managing_Teacher_Web.Common.CommonConstants.USER_SESSION];

}

<div class="row">
    <h2 style="text-align:center;">DANH SÁCH LỚP HỌC</h2>
</div>

<div id="myTabContent" class="tab-content">
    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách lớp học</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-buttons" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr style="width:100%">
                                    <th style="width:20%">Tên lớp</th>
                                    <th style="width:20%">Giáo viên chủ nhiệm</th>
                                    <th style="width:30%">Khoa</th>
                                    <th style="width:30%">Danh sách sinh viên</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (listClass != null)
                                {

                                    foreach (var item in listClass)
                                    {


                                        <tr id="row_@item.ID">
                                            <td style="display:none">@item.Name </td>
                                            <td>@item.TeacherName</td>
                                            <td>@item.MajorName</td>
                                            <td><a href="/StudentsInClass/@item.ID" class="btn btn-success btn-xs">Danh sách sinh viên lớp @item.Name</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



