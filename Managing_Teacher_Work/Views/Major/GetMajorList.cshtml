
@{
    ViewBag.Title = "ManageTeacher";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listMajor = ViewBag.ListMajor;
    var session = (Managing_Teacher_Web.Common.UserLogin)Session[Managing_Teacher_Web.Common.CommonConstants.USER_SESSION];

}

<div class="row">
    <h2 style="text-align:center;">DANH SÁCH CÁC KHOA</h2>
</div>

<div id="myTabContent" class="tab-content">
    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách khoa</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-buttons" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr style="width:100%">
                                    <th style="width:20%">Tên khoa</th>
                                    <th style="width:30%">Văn phòng khoa</th>
                                    <th style="width:10%">Ngày thành lập</th>
                                    <th style="width:20%">Danh sách giáo viên</th>
                                    <th style="width:20%">Danh sách lớp</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in listMajor)
                                {
                                    <tr>

                                        <td>@(item.Name ?? "")</td>
                                        <td>@(item.Address ?? "")</td>

                                        @if (item.Founding != null)
                                        {
                                            <td>
                                                @(item.Founding.ToString("dd/MM/yyyy"))
                                            </td>
                                        }
                                        else
                                        {
                                            <td><p>Không có</p></td>
                                        }


                                        <td><a href="/TeachersByMajor/@item.ID" class="btn btn-info btn-xs">Danh sách giáo viên khoa @item.Name</a></td>
                                        <td><a href="/ClassesByMajor/@item.ID" class="btn btn-info btn-xs">Danh sách lớp theo khoa @item.Name</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

