
@{
    ViewBag.Title = "ListStudent";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listStudent = ViewBag.ListStudent;
    var classDetails = ViewBag.ClassDetail;
    var teacher = ViewBag.Teacher;
    var session = (Managing_Teacher_Web.Common.UserLogin)Session[Managing_Teacher_Web.Common.CommonConstants.USER_SESSION];

}

<script>
    function cancel() {
        if ((document.referrer.toString().indexOf("/ClassList/") != -1)) {
            window.location = "/ClassList/";
        }
    }
</script>
<div class="row">
    <h2 style="text-align:center;">DANH SÁCH SINH VIÊN THEO LỚP</h2>
</div>
<div id="myTabContent" class="tab-content">
    <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách sinh viên lớp @classDetails.Name - GVCN: @teacher.Name_Teacher</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <table id="datatable-buttons" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr style="width:100%">
                                    <th style="width:20%">Tên sinh viên</th>
                                    <th style="width:15%">Ngày sinh</th>
                                    <th style="width:30%">Địa chỉ</th>
                                    <th style="width:15%">Số điện thoại</th>
                                    <th style="width:10%">Email</th>
                                    <th style="width:10%">Lớp</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (listStudent != null)
                                {

                                    foreach (var item in listStudent)
                                    {


                                        <tr id="row_@item.ID">
                                            <td style="display:none"><a href="/Profile-Student/@item.ID">@item.Name_Student</a> </td>
                                            @if (item.DateOfBirth != null)
                                            {
                                                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                            }
                                            else
                                            {
                                                <td>Không có</td>
                                            }

                                            <td>@item.Address</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.Class.Name</td>
                                        </tr>
                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                    <div class="input" style="text-align: center;">

                        <button class="btn btn-search" style="background-color:orangered; color: white" onclick="cancel();">
                            <span></span><i class="fa fa-undo"></i>&nbsp;Quay lại
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
